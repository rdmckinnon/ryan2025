---
import BaseLayout from "@/layouts/BaseLayout.astro";
import BgGrid from "@/components/assets/BgGrid.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog", ({ data }) => data.draft !== true);
---

<BaseLayout>
  <section id="blog" class="border-white/20 border-b divide-y divide-white/20">
    <div class="p-8 relative">
      <BgGrid />
      <h1 class="text-white tracking-tighter font-black uppercase text-3xl lg:text-8xl relative">
        Notes
      </h1>
    </div>
    <div class="p-8">
      <p class="text-white font-black uppercase tracking-tight lg:text-3xl text-xl mb-8">
        Thoughts on music, golf, photography, and life between rounds.
      </p>
    </div>
    <div class="p-8">
      {posts.length === 0 ? (
        <div class="p-12 text-center">
          <p class="text-slate-300 text-lg">
            Notes coming soon. Currently working through the catalogâ€”music reviews, golf thoughts, and coastal captures.
          </p>
        </div>
      ) : (
        <div class="space-y-6">
          {posts.map((post) => (
            <article class="group border-t border-white/10 pt-6 first:border-0 first:pt-0 transition-all hover:opacity-80">
              <h2 class="text-2xl font-black uppercase tracking-tight text-white">
                <a href={`/blog/${post.slug}`} class="hover:text-cyan-300 transition-colors">{post.data.title}</a>
              </h2>
              <div class="mt-2 text-xs text-slate-400 uppercase tracking-wider">{post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</div>
              <p class="mt-3 text-sm text-slate-300">{post.data.summary}</p>
            </article>
          ))}
        </div>
      )}
    </div>
  </section>
</BaseLayout>
