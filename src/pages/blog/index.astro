---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog", ({ data }) => data.draft !== true);
---

<BaseLayout>
  <main class="page-shell">
    <div class="terminal space-y-6">
      <div class="terminal__header">ryan@home<span>/blog</span></div>
      <header>
        <h1 class="text-white text-3xl font-black uppercase tracking-tight">Notes</h1>
        <p class="text-sm text-slate-300">Thoughts on music, golf, photography, and life between rounds.</p>
      </header>
      {posts.length === 0 ? (
        <div class="rounded-2xl border border-white/10 bg-white/5 p-12 text-center backdrop-blur">
          <p class="text-slate-300">
            Notes coming soon. Currently working through the catalogâ€”music reviews, golf thoughts, and coastal captures.
          </p>
        </div>
      ) : (
        <div class="space-y-4">
          {posts.map((post) => (
            <article class="group rounded-2xl border border-white/10 bg-white/5 p-6 backdrop-blur transition-all hover:border-white/20 hover:bg-white/10">
              <h2 class="text-xl font-bold uppercase tracking-tight text-white">
                <a href={`/blog/${post.slug}`} class="hover:text-cyan-300 transition-colors">{post.data.title}</a>
              </h2>
              <div class="mt-2 text-xs text-slate-400">{post.data.date.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</div>
              <p class="mt-3 text-sm text-slate-300">{post.data.summary}</p>
            </article>
          ))}
        </div>
      )}
    </div>
  </main>
</BaseLayout>
