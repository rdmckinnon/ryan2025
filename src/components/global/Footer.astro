---
import { orderedSocialKeys, socialLinks } from "@/data/social";

const socialLabel = (key: string) =>
  key === "email"
    ? "Email"
    : key === "rss"
    ? "RSS"
    : key.charAt(0).toUpperCase() + key.slice(1);
---

<footer class="border-t border-white/20 bg-black/80">
  <div class="mx-auto flex max-w-6xl flex-col items-center gap-4 px-6 py-10 text-center text-xs uppercase tracking-[0.4em] text-slate-300 md:flex-row md:justify-between">
    <p class="font-black text-white">Ryan McKinnon</p>
    <ul class="flex flex-wrap items-center justify-center gap-3">
      {orderedSocialKeys.map((key) => (
        <li>
          <a
            class="inline-flex h-10 w-10 items-center justify-center rounded-full border border-white/10 bg-white/5 text-slate-200 transition-colors duration-200 hover:border-white/30 hover:text-white"
            href={socialLinks[key]}
            aria-label={socialLabel(key)}
            target={key === "email" || key === "rss" ? undefined : "_blank"}
            rel={key === "email" || key === "rss" ? undefined : "noopener"}
          >
            <span class="sr-only">{socialLabel(key)}</span>
            {key === "email" && (
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="5" width="18" height="14" rx="2" ry="2"></rect>
                <path d="m3 7 9 6 9-6"></path>
              </svg>
            )}
            {key === "twitter" && (
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M18.244 3.25h3.242l-7.083 8.086 8.33 9.414H16.17l-5.085-5.965-5.82 5.965H2l7.58-8.268L1.667 3.25h6.5l4.572 5.338 5.505-5.338Zm-1.137 17.227h1.797L6.987 4.359H5.07l12.037 16.118Z" />
              </svg>
            )}
            {key === "instagram" && (
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="3" width="18" height="18" rx="5" ry="5"></rect>
                <circle cx="12" cy="12" r="4"></circle>
                <circle cx="17" cy="7" r="1"></circle>
              </svg>
            )}
            {key === "linkedin" && (
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.038-1.852-3.038-1.853 0-2.137 1.445-2.137 2.939v5.668H9.35V9h3.414v1.561h.05c.476-.9 1.637-1.85 3.37-1.85 3.6 0 4.267 2.37 4.267 5.456v6.285ZM5.337 7.433a2.062 2.062 0 1 1 0-4.124 2.062 2.062 0 0 1 0 4.124Zm1.777 13.019H3.56V9h3.554v11.452Z" />
              </svg>
            )}
            {key === "rss" && (
              <svg class="h-5 w-5" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                <path d="M5.5 18a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0Zm5.77 1.5a9.27 9.27 0 0 0-9.27-9.27v-3a12.27 12.27 0 0 1 12.27 12.27h-3Zm6.73 0A16 16 0 0 0 2 3.5v-3A19 19 0 0 1 21 19.5h-3Z" />
              </svg>
            )}
          </a>
        </li>
      ))}
    </ul>
    <p class="text-[0.55rem] text-slate-400">Â© {new Date().getFullYear()}</p>
  </div>
</footer>
