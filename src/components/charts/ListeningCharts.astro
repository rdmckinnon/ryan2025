---
// Custom CSS-based charts for listening habits
---

<style>
  /* Activity Chart Styles */
  .activity-chart {
    display: flex;
    align-items: flex-end;
    height: 200px;
    gap: 2px;
    padding: 1rem 0;
  }

  .activity-bar {
    flex: 1;
    background: linear-gradient(to top, var(--accent), var(--highlight));
    border-radius: 2px 2px 0 0;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    min-width: 3px;
  }

  .activity-bar:hover {
    background: var(--highlight);
    transform: scaleY(1.05);
  }

  .activity-bar::after {
    content: attr(data-count);
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.9);
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.75rem;
    white-space: nowrap;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.2s;
  }

  .activity-bar:hover::after {
    opacity: 1;
  }

  /* Hour Chart Styles */
  .hour-chart {
    display: grid;
    grid-template-columns: repeat(24, 1fr);
    gap: 4px;
    padding: 1rem 0;
  }

  .hour-bar {
    height: 120px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .hour-fill {
    background: var(--accent);
    border-radius: 4px 4px 0 0;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .hour-fill:hover {
    background: var(--highlight);
  }

  .hour-label {
    text-align: center;
    font-size: 0.65rem;
    color: var(--foreground2);
    margin-top: 0.25rem;
  }

  /* Diversity Pie Chart */
  .diversity-chart {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    padding: 2rem 0;
  }

  .pie-chart {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    position: relative;
    background: conic-gradient(
      var(--accent) 0% var(--top10-percent),
      var(--foreground2) var(--top10-percent) 100%
    );
  }

  .pie-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: var(--background1);
    width: 120px;
    height: 120px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  .pie-label {
    font-size: 2rem;
    font-weight: 900;
    color: var(--accent);
  }

  .pie-sublabel {
    font-size: 0.75rem;
    color: var(--foreground2);
    text-transform: uppercase;
  }

  .pie-legend {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .legend-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .legend-color {
    width: 24px;
    height: 24px;
    border-radius: 4px;
  }

  .legend-text {
    display: flex;
    flex-direction: column;
  }

  .legend-label {
    font-size: 0.9rem;
    color: var(--foreground0);
    font-weight: 600;
  }

  .legend-value {
    font-size: 0.75rem;
    color: var(--foreground2);
  }

  /* Streak Display */
  .streak-display {
    display: flex;
    gap: 2rem;
    padding: 2rem 0;
    flex-wrap: wrap;
  }

  .streak-card {
    flex: 1;
    min-width: 200px;
    background: rgba(144, 224, 239, 0.05);
    border: 1px solid var(--accent);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
  }

  .streak-number {
    font-size: 3rem;
    font-weight: 900;
    color: var(--accent);
    line-height: 1;
  }

  .streak-label {
    font-size: 0.85rem;
    color: var(--foreground2);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-top: 0.5rem;
  }

  /* Decade Chart */
  .decade-chart {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem 0;
  }

  .decade-row {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .decade-label {
    min-width: 80px;
    font-size: 0.9rem;
    color: var(--foreground1);
    font-weight: 600;
  }

  .decade-bar-container {
    flex: 1;
    height: 32px;
    background: rgba(145, 162, 186, 0.1);
    border-radius: 4px;
    overflow: hidden;
    position: relative;
  }

  .decade-bar-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--accent), var(--highlight));
    border-radius: 4px;
    transition: width 0.5s ease;
    display: flex;
    align-items: center;
    padding: 0 0.75rem;
    justify-content: flex-end;
  }

  .decade-count {
    font-size: 0.75rem;
    color: white;
    font-weight: 700;
    white-space: nowrap;
  }

  /* Day of Week Chart */
  .dayofweek-chart {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    gap: 0.5rem;
    padding: 1rem 0;
  }

  .day-bar {
    height: 150px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  .day-fill {
    background: var(--accent);
    border-radius: 4px 4px 0 0;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .day-fill:hover {
    background: var(--highlight);
  }

  .day-label {
    text-align: center;
    font-size: 0.75rem;
    color: var(--foreground2);
    margin-top: 0.5rem;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .diversity-chart {
      flex-direction: column;
    }

    .hour-chart {
      overflow-x: auto;
    }

    .streak-display {
      flex-direction: column;
    }
  }
</style>

<div id="charts-container">
  <!-- Charts will be rendered by JavaScript -->
</div>
